<div class="container">
  <%= form_with model: @venue do |f| %>
    <div class="col-2 mt-2">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>
      <%= f.label :price_per_day, "Price per day", class: "mt-4" %>
      <%= f.number_field :price_per_day %>
      <div data-controller="location-autocomplete", data-location-autocomplete-api-key-value="<%= ENV.fetch('MAPBOX_API_KEY') %>">
        <%= f.label :location, "Location", class: "mt-4" %>
        <%= f.text_field :location, data: { location_autocomplete_target: "location" } %>
      </div>
      <%= f.label :size_of_band, "Size of band", class: "mt-4" %>
      <%= f.number_field :size_of_band %>
      <%= f.label :name, "Description", class: "mt-4" %>
      <%= f.text_area :description %>
      <%= f.label :phone_number, "Phone number", class: "mt-4" %>
      <%= f.text_field :phone_number %>
      <%= f.label :photo, "Photo of venue", class: "mt-4" %>
      <%= f.file_field :photo, as: :file %>
      <!-- f.input :photos, as: :file, input_html: { multiple: true } -->
      <%= f.submit "Add venue", class: "mt-4" %>
    </div>
  <% end %>
</div>

