<h1>Booking Details</h1>

<div class="container">

  <h1><%= @booking.venue.name %></h1>

  <ul>
    <li>Status:<%= @booking.confirmed %></li>
    <li>Start date:<%= @booking.start_date%> </li>
    <li>End date: <%= @booking.end_date %></li>
    <li>Total cost: Â£<%= (@booking.venue.price_per_day).to_i * (distance_of_time_in_words(@booking.end_date,@booking.start_date)).to_i %></li>
    <li><%= (distance_of_time_in_words(@booking.end_date,@booking.start_date)) %></li>

  </ul>
  <%= link_to "Back to all Venues", root_path %>

</div>

<h1>Leave a review</h1>

<div class="container">

  <%= simple_form_for [@booking, @review] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
    <%= f.button :submit %>
  <% end %>

</div>
