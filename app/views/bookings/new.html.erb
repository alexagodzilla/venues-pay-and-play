<div class="container">
  <div class="row">
    <%= render "form", { venue: @venue, booking: @booking } %>
    <div class="col-6 mt-4 ms-5">
      <h4>Selected venue: <%= @venue.name %></h4>

      <p class="mt-3 mb-1">£<%= @venue.price_per_day %> per day</p><hr class="m-2">
      <p class="mb-1"><%= @venue.location %></p><hr class="m-2">
      <p class="mb-1">Can accommodate up to
      <% if @venue.size_of_band > 1 %>
        <%= @venue.size_of_band %> musicians <hr class="m-2">
      <% end %>
      <% if @venue.photo.attached? %>
        <%= cl_image_tag(@venue.photo.key, width: 287, height: 150, crop: :thumb, gravity: :face, radius: 5) %>
      <% else %>
        <%= image_tag(@venue.pic_url, width: 287, height: 150, crop: :thumb, gravity: :face, radius: 5) %>
      <% end %>
      <p class="mt-3 mb-1">£<%= @venue.price_per_day %> per day</p><hr class="m-2">
      <p class="mb-1"><%= @venue.location %></p><hr class="m-2">
      <p class="mb-1">Can accommodate up to <%= @venue.size_of_band %> musicians</p><hr class="m-2">
      <p class="mb-1"><%= @venue.description %></p>
      <p><%= link_to "Back to venue", venue_path(@venue) %></p>
    </div>
  </div>
</div>
